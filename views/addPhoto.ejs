<% include partial/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Add New Photo!</h1>
            <div style="width:30%; margin: 0 auto;">
                <form action="/gallery" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="author" placeholder="author"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description"></input>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <a href="/gallery">Go back to Gallery!</a>
            </div>
        </div>
    </div>
    
    
<% include partial/footer %>